{
  "name": "Python UV Devcontainer",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "runArgs": ["--platform=linux/amd64"],
  "remoteUser": "vscode",
  "workspaceFolder": "/workspaces",
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspaces/.venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "python.terminal.activateEnvInCurrentTerminal": true
      }
    }
  },
  "postCreateCommand": "if [ -f pyproject.toml ]; then ~/.cargo/bin/uv sync; fi",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspaces,type=bind,consistency=cached"
  ]
}