{
  "name": "pythonproject",
  "dockerFile": "Dockerfile",
  "remoteUser": "vscode",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-azuretools.vscode-azurestorage",
        "ms-azuretools.vscode-azurecli"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspaces/${localWorkspaceFolderBasename}/.venv/bin/python",
        "python.venvPath": "/workspaces/${localWorkspaceFolderBasename}",
        "python.terminal.activateEnvironment": true
      }
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached"
  ],
  "postCreateCommand": "uv sync"
}